	public ArrayList<Ville> getInfoVille(String monParam) throws SQLException {
		ArrayList<Ville> listeVille;

		if (monParam != null) {
			listeVille = villeDAO.getAllVilles(monParam);
		} else {
			listeVille = villeDAO.getAllVilles(monParam);
		}
		return listeVille;
	}

